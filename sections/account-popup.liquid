<div class="ctm-login-modal-bg"></div>
<div
  class="c-modal w-full max-w-full m-auto customer-account hidden relative h-fit ctm-login-modal z-99"
  data-modal-login
>
  <div class="c-modal-body h-full flex mdscreen3:flex-col">
    <div class="w-1/2 mdscreen3:w-full">
      <div
        class="account-tab h-full tab-pane current"
        data-img="tab-1"
        id="img-1"
      >
        {% if section.settings['login-img'] != blank %}
          <img
            class="w-full h-full object-cover object-center"
            src="{{ section.settings.login-img| img_url : 'master' }}"
            alt="login_image"
            loading="lazy"
            width="900"
            height="700"
          >
        {% endif %}
      </div>
      <div
        class="account-tab h-full tab-pane"
        data-img="tab-2"
        id="img-2"
      >
        {% if section.settings['register-img'] != blank %}
          <img
            class="w-full h-full object-cover object-center"
            src="{{ section.settings.register-img| img_url : 'master' }}"
            alt="register-img"
            loading="lazy"
            width="900"
            height="700"
          >
        {% endif %}
      </div>
    </div>
    <div class="w-1/2 mdscreen3:w-full py-100 mdscreen3:py-40 px-55 mdscreen3:px-30 bg-light_yellow2">
      <div class="modal-login w-full h-full flex justify-center items-center max-w-[640px] mx-auto">
        <div class="modal-login__inner w-full">
          <div class="login-model-logo w-[142px] h-[auto] mx-auto">
            {% if section.settings.logo_icon != blank %}
              <img
                class="w-full h-full object-contain"
                src="{{ section.settings.logo_icon| img_url : 'master' }}"
                alt="logo_image"
                loading="lazy"
                width="147"
                height="110"
              >
            {% endif %}
          </div>
          {% unless customer %}
            <div class="tab-heading d-flex justify-content-center relative z-100 py-40 lgscreen:pt-0">
              <ul
                class="nav nav-pills flex justify-center items-center pl-0 mb-0 list-none gap-20"
                id="pills-tab"
                role="tablist"
              >
                <li class="nav-item ctm_login_nav text-center">
                  <a
                    class="nav-link current cursor-pointer block !w-full h4"
                    href="javascript:void(0);"
                    data-tab="tab-1"
                    data-img="img-1"
                    id="login"
                    role="tab"
                    aria-controls="pills-home1"
                    data-title="My Account"
                    aria-selected="true"
                    >SIGN IN</a
                  >
                </li>
                <li class="nav-item ctm_login_nav text-center">
                  <a
                    class="nav-link cursor-pointer block !w-full h4"
                    href="javascript:void(0);"
                    id="signup"
                    data-tab="tab-2"
                    data-img="img-2"
                    role="tab"
                    aria-controls="pills-profile2"
                    data-title="Create an Account"
                    aria-selected="false"
                    >CREATE ACCOUNT</a
                  >
                </li>
              </ul>
            </div>
          {% endunless %}

          <div class="tab-content relative z-100 ctm_input_div" id="pills-tabContent">
            {% if customer %}
              <span class="text-brown mt-20 text-center mb-20 block"
                >Welcome to your account
                <strong>{{ customer.name }}</strong>
              </span>
              <div class="flex flex-wrap justify-center smscreen:flex-col items-center gap-20">
                <a href="/account" class="btn-white flex-1 text-center smscreen:w-full btn_primary">My Account</a>
                <a
                  href="{{ routes.account_logout_url }}"
                  class="btn-white flex-1 text-center smscreen:w-full btn_black"
                  >Logout</a
                >
              </div>
            {% else %}
              <div
                class="account-tab tab-pane current !px-0"
                data-tab="tab-1"
                id="tab-1"
                role="tabpanel"
                aria-labelledby="pills-home-tab"
              >
                <div class="tab_content_block_grp flex">
                  {% render 'login' %}
                </div>
              </div>
              <div
                class="account-tab tab-pane !px-0"
                data-tab="tab-2"
                id="tab-2"
                role="tabpanel"
                aria-labelledby="pills-profile-tab"
              >
                {% render 'register' %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
