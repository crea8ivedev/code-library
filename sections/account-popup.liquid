{% schema %}
{
  "name": "Account Popup",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_icon",
      "label": "Logo"
    },
    {
      "type": "html",
      "id": "popup_content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "login-img",
      "label": "Login Image"
    },
    {
      "type": "image_picker",
      "id": "register-img",
      "label": "Register Image"
    }
  ]
}
{% endschema %}
